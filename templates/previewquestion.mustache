{{!
    @template contenttype_repurpose/previewquestion

    This template renders the link for question preview and adds listener

    Example context (json):
    {
        "url": "https://moodle.org/question/preview.php?id=530"
    }
}}
<a href="{{{ url }}}" data-action="preview" target="_blank">
    {{# str }} previewquestion, contenttype_repurpose {{/ str }}
</a>
{{# js }}
    require(['contenttype_repurpose/preview'], function(PreviewQuestion) {
        PreviewQuestion.init();
    });
{{/ js }}
